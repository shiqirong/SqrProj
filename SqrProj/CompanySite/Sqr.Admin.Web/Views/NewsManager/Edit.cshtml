                <div class="layui-col-md6">
                    <label class="layui-form-label layui-required">新闻标题</label>
                    <div class="layui-input-block">
                        <input type="text" name="Title" value="@Model?.Title"  class="layui-input">
                    </div>
                </div>


                <div class="layui-col-md6">
                    <label class="layui-form-label layui-required">新闻标题二</label>
                    <div class="layui-input-block">
                        <input type="text" name="Title2" value="@Model?.Title2"  class="layui-input">
                    </div>
                </div>
            </div>
            <div class="layui-form-item ">
                <div class="layui-col-md6">
                    <label class="layui-form-label ">大图标</label>
                    <div class="layui-input-block">
                        <input type="text" name="Imagebig" value="@Model?.Imagebig"  lay-filter="tree" class="layui-input">
                    </div>
                </div>
                <div class="layui-col-md6">
                    <label class="layui-form-label">小图标</label>
                    <div class="layui-input-block">
                        <input type="text" name="Imagesmall" value="@Model?.Imagesmall"  lay-filter="tree" class="layui-input">
                    </div>
                </div>
            </div>
            <div class="layui-form-item">
                <div class="layui-col-md6">
                    <div class="layui-input-block">
                        <input type="checkbox" name="IsHot" title="是否热门" @((Model!=null&&Model.IsHot)?"checked":"")>
                        @*</div>
                            <div class="layui-input-block">*@
                        <input type="checkbox" name="IsPublished" title="是否发布" @((Model!=null && Model.IsPublished)?"checked":"")>
                    </div>
                </div>
                <div class="layui-col-md6">
                    <label class="layui-form-label">排序</label>
                    <div class="layui-input-block">
                        <input type="number" name="OrderNum" value="@Model?.OrderNum"  lay-filter="tree" class="layui-input">
                    </div>
                </div>
            </div>
            <div class="layui-form-item">
                <label class="layui-form-label layui-required">内容简介</label>
                <div class="layui-input-block">
                    <textarea name="Content2" value="" id="contentEdit2">@Model?.Content2</textarea>
                </div>
            </div>
            <div class="layui-form-item ">
                <label class="layui-form-label layui-required">内容详情</label>
                <div class="layui-input-block">
                    <textarea name="Content" value="" id="contentEdit">@Model?.Content</textarea>
                </div>
            </div>
            <div id="layer-tiny" style="display: none;">
